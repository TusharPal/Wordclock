<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_dialog_text_alignment_radioGroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:id="@+id/alert_dialog_text_alignment_radioButton_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Left"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <RadioButton
        android:id="@+id/alert_dialog_text_alignment_radioButton_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:text="Center"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <RadioButton
        android:id="@+id/alert_dialog_text_alignment_radioButton_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:text="Right"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
</RadioGroup>